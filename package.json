{
  "name": "@submodule/react",
  "version": "1.0.2",
  "description": "make use of @submodule/core in react",
  "dependencies": {
    "@submodule/core": "9.1.1"
  },
  "peerDependencies": {
    "react": "^17.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.tsx",
      "src/suspense.ts"
    ],
    "minify": false,
    "treeshake": false,
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "dts": true
  },
  "files": [
    "dist/**",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./suspense": {
      "source": "./src/suspense.ts",
      "require": "./dist/suspense.js",
      "types": "./dist/suspense.d.ts",
      "import": "./dist/suspense.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsup"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}