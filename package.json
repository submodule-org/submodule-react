{
  "name": "@submodule/react",
  "version": "1.3.2",
  "description": "make use of @submodule/core in react",
  "dependencies": {
    "@submodule/core": "^10.2.1",
    "@types/react": "18.3.3",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependencies": {
    "@submodule/core": "^10.2.1",
    "react": "^18.0.0 || ^19.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.tsx"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "minify": false,
    "treeshake": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "cjsInterop": true
  },
  "files": [
    "dist/**",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsup --external 'react,@submodule/core'",
    "update:submodule": "bun add @submodule/core -f && (cd examples/react && bun add @submodule/core -f)",
    "link:example": "bun run build && bun link && (cd examples/react && bun rm @submodule/react && bun link @submodule/react)"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}